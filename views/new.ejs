<%layout("boilerplate")%>


    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="row"></div>
        <div class="col-8 offset-2">
            <h2>Create a new Listing</h2>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="enter title" class="form-control" required>
            <div class="invalid-feedback">Title should be valid</div>
            <div class="valid-feedback">Title looks good</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
            
            
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <!-- <input name="listing[image][url]" placeholder="enter image url /link" class="form-control" required> -->
            <input name="listing[image][url]" placeholder="enter image url" class="form-control" type="file" required> 
            <!-- <input  name="listing[image][filename]" value="manualUpload"> -->

        </div>
        
        <div class="mb-3"> 
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="enter price" class="form-control" required>
            <div class="invalid-feedback">Price should be valid</div>
        </div>
          <!-- Categories (Checkboxes) -->
        <div class="mb-3">
        <label class="form-label">Categories</label>
        <div class="d-flex flex-wrap gap-2">
            <% const categories = [
                "Rooms","Beach","Lakefront","Mountains","Amazing Pools",
            "Tree Houses","Tiny Homes","Appartments","Arctic","Farms","Camping",
            "Iconic Cities","Amazing Views","Surfing","Castle"
            ]; %>

            <% for (let cat of categories) { %>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category][]" value="<%= cat %>" id="cat-<%= cat %>">
                <label class="form-check-label" for="cat-<%= cat %>"><%= cat %></label>
            </div>
            <% } %>
        </div>
        </div>


            
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="enter location" class="form-control" required>
            <div class="invalid-feedback">Location should be valid</div>
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="enter country" class="form-control" required>
            <div class="invalid-feedback">Country should be valid</div>
        </div>
        
        <br>
        <button class="btn btn-dark">Add listing</button>
        
        </div>
        
        </div>
        

    </form>
        

        

